# Description: The GNU generic library support script
# URL:         
# Maintainer:  
# Depends on:  

name=libtool
version=2.4.6
release=1
source=(https://ftp.gnu.org/gnu/$name/$name-$version.tar.xz)

build() {
        cd $name-$version

        ./configure --prefix=/usr
        make
        make DESTDIR=$PKG install
}
