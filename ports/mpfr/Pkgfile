# Description: Functions for multiple precision math
# URL:         
# Maintainer:  
# Depends on:  

name=mpfr
version=4.0.2
release=1
source=(https://www.mpfr.org/$name-$version/$name-$version.tar.xz)

build() {
        cd $name-$version

        ./configure --prefix=/usr        \
                    --disable-static     \
                    --enable-thread-safe
        make
        make DESTDIR=$PKG install
}
