name=curl
version=7.66.0
source=(https://curl.haxx.se/download/$name-$version.tar.xz)

build() {
	cd $name-$version
	./configure --prefix=/tools            \
                    --disable-static           \
                    --enable-threaded-resolver \
                    --with-ca-bundle=/tools/etc/ssl/certs/ca-certificates.crt
        make
        make DESTDIR=$PKG install
}
