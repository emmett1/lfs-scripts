name=ncurses
version=6.1
source=(http://ftp.gnu.org/gnu/ncurses/ncurses-$version.tar.gz)

build() {
	cd $name-$version

	sed -i s/mawk// configure
	
	./configure --prefix=/tools \
		--with-shared   \
		--without-debug \
		--without-ada   \
		--enable-widec  \
		--enable-overwrite
	make
	make install
	ln -s libncursesw.so /tools/lib/libncurses.so
}
