name=expect
version=5.45.4
source=(https://prdownloads.sourceforge.net/expect/expect$version.tar.gz)

build() {
	cd ${name}${version}

	cp -v configure{,.orig}
	sed 's:/usr/local/bin:/bin:' configure.orig > configure
	./configure --prefix=/tools       \
            --with-tcl=/tools/lib \
            --with-tclinclude=/tools/include
	make
	make SCRIPTS="" install
}
