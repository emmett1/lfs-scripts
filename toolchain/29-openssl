name=openssl
version=1.1.1d
source=(https://openssl.org/source/openssl-$version.tar.gz)

build() {
	cd $name-$version

	./config --prefix=/tools             \
		--openssldir=/tools/etc/ssl \
		--libdir=lib                \
		shared                      \
		no-ssl3-method
	make
	make -j1 MANDIR=/tools/share/man MANSUFFIX=ssl install
}
