# Pkgfile for cmake

name=cmake
version=3.27.1
release=1
source=(https://$name.org/files/v3.27/$name-$version.tar.gz)

pkg_build() {
	sed -i '/"lib64"/s/64//' Modules/GNUInstallDirs.cmake
	./bootstrap \
		--prefix=/usr \
		--system-libs \
		--mandir=/share/man \
		--no-system-jsoncpp \
		--no-system-cppdap \
		--no-system-librhash
	make
	make install
	mkdir -p $PKG/usr/share
	mv $PKG/usr/doc $PKG/usr/share
}
